<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.traiyi.mapper.SpecialtyMapper">
    <resultMap type="com.traiyi.pojo.Specialty" id="specialtyBean">
        <id column="sid" property="id"/>
        <result column="sname" property="name"/>
        <result column="grade_id" property="gradeID"/>
        <!-- 一对多的关系 -->
        <!-- property: 指的是集合属性的值, ofType：指的是集合中元素的类型 -->
        <association property="grade" javaType="com.traiyi.pojo.Grade">
            <id column="gid" property="id"/>
            <result column="gname" property="name"/>
        </association>
    </resultMap>

    <select id="listSpecialtyAll" resultMap="specialtyBean">
        select s.id 'sid', s.name 'sname', s.grade_id 'grade_id', g.id 'gid',g.name 'gname'
        from specialty s
                 left join grade g on s.grade_id = g.id
    </select>

    <insert id="add" parameterType="Specialty">
        insert into specialty (name)
        values (#{name})
    </insert>

    <delete id="delete" parameterType="Specialty">
        delete
        from specialty
        where id = #{id}
    </delete>

    <select id="get" parameterType="_int" resultType="Specialty">
        select *
        from specialty
        where id = #{id}
    </select>

    <update id="update" parameterType="Specialty">
        update specialty
        set name=#{name}
        where id = #{id}
    </update>
    <select id="list" resultType="Specialty">
        select id,name,grade_id   from specialty order by id
        <if test="start!=null and count!=null">
            limit #{start},#{count}
        </if>

    </select>
    <select id="total" resultType="int">
        select count(*)
        from specialty
    </select>
</mapper>

